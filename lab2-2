#include <stdio.h>

int main(){
    printf("[----- [Cho Daehyeon] [2016039075] -----]\n");

    int i, *ptr, **dptr;
    i = 1234;

    printf("[checking values before ptr = &i]\n");  
    printf("value if i == %d\n", i);                // i값 출력
    printf("address of i == %p\n", &i);             // i의 주소값 출력
    printf("value of ptr == %p\n", ptr);            // ptr값 출력(ptr에 아무런 값도 넣지 않았기 때문에 쓰레기값 출력)
    printf("address of ptr == %p\n", &ptr);         // ptr의 주소값 출력

    ptr = &i;   // ptr변수에 i의 주소값 저장

    printf("\n[checnking values after ptr = &i] \n");
    printf("value of i == %d\n", i);                // i값 출력
    printf("address of i == %p\n", &i);             // i의 주소값 출력
    printf("value of ptr == %p\n", ptr);            // ptr값 출력(i의 주소값)
    printf("address of ptr == %p\n", &ptr);         // ptr의 주소값 출력
    printf("value of *ptr == %d\n", *ptr);          // ptr 포인터가 가리키고 있는 주소에 저장된 값 출력(i값)

    dptr = &ptr;    //  dptr변수에 ptr의 주소값 저장

    printf("\n[checking values after dptr = &ptr] \n");
    printf("value of i == %d\n", i);                // i값 출력
    printf("address of i == %p\n", &i);             // i의 주소값 출력
    printf("value of ptr == %p\n", ptr);            // ptr값 출력(i의 주소값)
    printf("address of ptr == %p\n", &ptr);         // ptr의 주소값 출력
    printf("value of *ptr == %d\n", *ptr);          // ptr포인터가 가리키고 있는 값 출력(i값)
    printf("value of dptr == %p\n", dptr);          // dptr의 값 출력(ptr의 주소값)
    printf("address of dptr = %p\n", &dptr);        // dptr의 주소값 출력
    printf("value of *dptr == %p\n", *dptr);        // dptr 포인터가 가리키고 있는 주소에 저장된 값(ptr값)
    printf("value of **dptr == %d\n", **dptr);      // dptr 포인터가 가리키고 있는 주소에 저장된 값(ptr값)이 가리키고 있는 주소에 저장된 값(i값) 출력

    *ptr = 7777;    // *ptr값(i값) 7777로 변경

    printf("\n[after *ptr = 7777] \n");
    printf("value of i == %d\n", i);                // i값(7777) 출력
    printf("value of *ptr == %d\n", *ptr);          // ptr 포인터가 가리키고 있는 주소에 저장된 값 출력
    printf("value of **dptr == %d\n", **dptr);      // dptr 포인터가 가리키고 있는 주소에 저장된 값(ptr값)이 가리키고 있는 주소에 저장된 값(i값) 출력

    **dptr = 8888;  // **dptr값(i값) 8888로 변경

    printf("\n[after **dptr = 8888] \n");
    printf("value of i == %d\n", i);                // i값(8888) 출력
    printf("value of *ptr == %d\n", *ptr);          // ptr 포인터가 가리키고 있는 주소에 저장된 값 출력
    printf("value of **dptr == %d\n", **dptr);      // dptr 포인터가 가리키고 있는 주소에 저장된 값(ptr값)이 가리키고 있는 주소에 저장된 값(i값) 출력

    return 0;

}
